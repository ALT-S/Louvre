{% extends "::layout.html.twig" %}

 {% block body %}
     <h3>{% trans %}5. Vos coordonnées{% endtrans %}</h3>

     <div class="formBillet col-sm-12 detail">

         {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
         {{ form_errors(form) }}

         <div class="form-group coordonnees">
             {{ form_label(form.nom, "Nom", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
             {{ form_errors(form.nom) }}

             <div class="col-lg-5">
                 {{ form_widget(form.nom) }}
             </div>
         </div>

         <div class="form-group coordonnees">
             {{ form_label(form.prenom, "Prénom", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
             {{ form_errors(form.prenom) }}

             <div class="col-lg-5">
                 {{ form_widget(form.prenom) }}
             </div>
         </div>
         <div class="form-group coordonnees">
             {{ form_label(form.email, "Email", {'label_attr': {'class': 'col-lg-3 control-label'}}) }}
             {{ form_errors(form.email) }}

             <div class="col-lg-5">
                 {{ form_widget(form.email) }}
             </div>
         </div>


         <div class="col-lg-5">
             <div class="boutonEnregistrer">
                 <p class="suiteBoutonEnregistrer">
                     {{ form_widget(form.enregistrer, {'attr': {'class': 'btn btn-default'}}) }}
                 </p>
             </div>
         </div>

         {{ form_rest(form) }}
         {{ form_end(form) }}
     </div>
 {% endblock %}