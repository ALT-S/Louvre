{% extends "::layout.html.twig" %}

{% block body %}

    <div class="texte">
        <p>
            Pour commander, vous devez sélectionner :
        <ul>
            <li>
                Le jour de la visite
            </li>
            <li>
                Le type de billet (Journée, Demi-journée…).
            </li>
            <li>
                Le nombre de billet
            </li>
        </ul>
        Puis suivre les indications données
        </p>
    </div>

    {{ form_start(form, {'method': 'POST'}) }}
        <h3>Choisissez une date</h3>
        <p>
            {{ form_widget(form.dateVisite) }}
            {{ form_errors(form.dateVisite) }}
        </p>
        <h3>Choisissez le type de billet</h3>
        <p>
            {{ form_widget(form.type) }}
            {{ form_errors(form.type) }}
        </p>
        <h3>Choisissez le nombre de billet</h3>
        <p>
            {{ form_widget(form.nbBillets) }}
            {{ form_errors(form.nbBillets) }}
        </p>

        <input type="submit" value="Envoyer" />
        {{ form_rest(form) }}

    {{ form_end(form) }}

{% endblock %}