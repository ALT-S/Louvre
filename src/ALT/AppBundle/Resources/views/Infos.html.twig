{% extends "::layout.html.twig" %}

{% block body %}
    <h3>{% trans %}4. Renseignez les informations{% endtrans %}</h3>
    {{ form_start(form, {'method': 'POST'}) }}

    {% for formBillets in form.billets %}
        <div class="row infos">
            <div class="col-sm-3 numero">
                {% trans %} BILLET N°{% endtrans %}{{ loop.index }}
            </div>

            <div class="col-sm-9 info ">


                {{ form_row(formBillets.nom) }}

                {{ form_row(formBillets.prenom) }}

                {{ form_row(formBillets.pays) }}

                {{ form_row(formBillets.dateNaissance) }}

                {{ form_row(formBillets.tarifReduit) }}

            </div>
        </div>
    {% endfor %}
    <div class="boutonInfo"> {{ form_row(form.enregistrer) }} </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}

    <a class="btn btn-default retour" href="{{ path('accueil') }}">
        <i class="glyphicon glyphicon-chevron-left"></i>
        {% trans %} Retour à la billetterie{% endtrans %}
    </a>
{% endblock %}